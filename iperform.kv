<IPerformRoot>:


    canvas.before:
        Color: 
            rgb: .4, .5, .4
        Rectangle:
            pos: self.pos
            size: self.size 

    ScreenManager:

        
        id: IPscreen_manager
        StartScreen:
            id: start_screen
            name: "start_screen"
        AnalyzeScreen:
            id: analyze_screen
            name: "analyze_screen"    
        AnotherScreen:
            id: another_screen
            name: "another_screen"    


<StartScreen@Screen>:
    lbl_text: lbl_text
    filechooser: filechooser
    next_btn: next_btn
    load_btn: load_btn


    FloatLayout:

        canvas.before:
            Color: 
                rgb: .5, .5, .4
            Rectangle:
                pos: self.pos
                size: self.size 
        
        FileChooserListView:
            id: filechooser
            size_hint: 0.7, 0.7
            pos_hint: {'top': 1.0}
            on_selection: app.root.storeAValue()
    
        Label:
            id: lbl_text
            pos_hint: {'x': 0.0, 'y': 0.0}
            size_hint: 0.7, 0.05
            text: ""    
               

        Button:
            id: load_btn
            text: "Load File..."
            size_hint: 0.3, 0.1
            pos_hint: {'x': 0, 'y': 0.2}
            font_size: min(root.height, root.width) /50
            on_release: app.root.load(filechooser.path, filechooser.selection)
        Button:
            id: next_btn
            text: "Next"
            size_hint: 0.3, 0.1
            pos_hint: {'x': 0, 'y': 0.1}
            font_size: min(root.height, root.width) /50
            on_release: app.root.gotoAnalyzeScreen()    

<AnotherScreen@Screen>:
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "[b]We Show Analysis here[/b]"
            font_size: 30
            markup: True


<AnalyzeScreen@Screen>:

    label1: label1
    BoxLayout:
        orientation: "vertical"
        padding: root.width*0.02, root.height*0.02
        spacing: min(root.width, root.height)*0.02   

        Label:
            id: label1
            text: "" 
                  
            
            pos_hint: {'center_x': 0.5, 'y': 0.3}
            font_size: max(root.height, root.width) / 50

        Button:
            id: analyze_btn
            text: "Analyze"
            font_size: min(root.height, root.width)/50
            size_hint: 0.5, 0.1
            pos_hint: {'x': 0, 'y': 0.2}
            on_release: app.root.analyze()
        Button:
            id: email_btn
            text: "Send Performance Email"
            font_size: min(root.height, root.width)/50
            size_hint: 0.5, 0.1
            pos_hint: {'x': 0, 'y': 0.1}
            on_release: app.root.changeEmailText() 

        Button:
            id: sms_btn
            text: "Send Performance SMS"
            font_size: min(root.height, root.width)/50
            size_hint: 0.5, 0.1
            pos_hint: {'x': 0, 'y': 0}
            on_release: app.root.changeSmsText() 

          

  
                




      

